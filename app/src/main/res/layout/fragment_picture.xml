<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.floodexplorer.floodexplorer.Activities.StoryTab.PictureFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_blank_fragment" />

    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtImageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/ewulogoresized" />

    <TextView
        android:id="@+id/captionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storyImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="TextView" />

</RelativeLayout>
