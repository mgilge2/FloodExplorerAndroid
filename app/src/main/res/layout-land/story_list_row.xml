<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/storyImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        app:srcCompat="@mipmap/flood_mammoth" />

    <TextView
        android:id="@+id/storyImageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/storyImg"
        android:layout_toRightOf="@+id/storyImg"
        android:lines="1"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/storyListAuthorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/storyImageTxt"
        android:layout_alignLeft="@+id/storyImageTxt"
        android:layout_alignRight="@+id/storyImageTxt"
        android:layout_alignStart="@+id/storyImageTxt"
        android:layout_below="@+id/storyImageTxt"
        android:lines="1"
        android:text="TextView" />
</RelativeLayout>